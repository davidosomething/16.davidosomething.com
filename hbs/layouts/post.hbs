{{!
	Single post
}}
{{> globalStart }}
<article class="article" itemprop="mainEntity">
	<meta itemprop="name" content="{{ slug }}">
	<header class="article__header">
		<h1 class="article__title" itemprop="headline"><a rel="bookmark" class="article__header__link article__header__link--permalink" href="{{ permalink }}" itemprop="mainEntityOfPage url">{{{ title }}}</a></h1>
		{{#if subheader}}<h2 class="article__subheader" itemprop="alternativeHeadline">{{{ subheader }}}</h2>{{/if}}
		<div class="article__meta">
			<time datetime="{{ moment datePublished toISOString=null }}" itemprop="datePublished">{{ moment datePublished format="MMMM DD, YYYY" }}</time>
			{{#if changelog}}<p>Updated <time datetime="{{ moment changelog.[1].date toISOString=null }}" itemprop="dateModified">{{ moment changelog.[1].date format="MMMM DD, YYYY" }}</time>(<a href="#changelog">log</a>)</p>{{/if}}
			{{> article__tags }}
		</div>
	</header>
	<section class="article__body" itemprop="articleBody">
		{{{ contents }}}
	</section>
	<footer class="article__footer">
		{{#if changelog}}
			<section id="changelog" class="article__changelog">
				<h2>Changelog</h2>
				<dl>
					{{#changelog}}
						<dt>{{ moment date format="MMM D, YYYY" }} {{#if diff}}(<a href="{{ diff }}">diff</a>){{/if}}</dt>
						<dd>{{#markdown body}}{{ . }}{{/markdown}}</dd>
					{{/changelog}}
				</dl>
			</section>
		{{/if}}
		{{> comments }}
	</footer>
</article>
{{> globalEnd }}
